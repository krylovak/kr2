using System;
using System.IO;

class Программа
{
    static void ОсновнойМетод()
    {
        string путьКФайлу = "11.1.txt";

        // Открываем файл для записи или создаем его, если он не существует
        using (StreamWriter писатель = new StreamWriter(путьКФайлу))
        {
            // Записываем заголовок таблицы
            писатель.WriteLine("x    sin(x)");

            // Вычисляем значения sin(x) для x от 0 до 1 с интервалом 0,1
            for (double x = 0.0; x <= 1.0; x += 0.1)
            {
                // Записываем значение x и соответствующее значение sin(x) в файл
                писатель.WriteLine($"{x:F1}  {Math.Sin(x):F4}");
            }
        }

        Console.WriteLine($"Таблица значений функции sin(x) была успешно записана в файл {путьКФайлу}.");
    }
}
